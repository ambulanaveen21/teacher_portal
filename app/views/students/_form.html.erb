<%= form_with model: @student, scope: :student do |form| %>
  <div id="error_explanation"></div>

  <div class="form-group">
    <div class="input-group">
      <span class="input-group-text"><i class="fas fa-user"></i></span>
      <%= form.label :name, class: 'form-label visually-hidden' %>
      <%= form.text_field :name, class: 'form-control', required: true, placeholder: 'Name' %>
    </div>
  </div>

  <div class="form-group">
    <div class="input-group">
      <span class="input-group-text"><i class="fas fa-book"></i></span>
      <%= form.label :subject, class: 'form-label visually-hidden' %>
      <%= form.text_field :subject, class: 'form-control', required: true, placeholder: 'Subject' %>
    </div>
  </div>

  <div class="form-group">
    <div class="input-group">
      <span class="input-group-text"><i class="fas fa-graduation-cap"></i></span>
      <%= form.label :marks, class: 'form-label visually-hidden' %>
      <%= form.number_field :marks, class: 'form-control', required: true, placeholder: 'Marks' %>
    </div>
  </div>

  <div class="form-group">
    <%= form.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
